# Usa PHP 8.2 con Apache y Composer
FROM composer:2.7 as build

WORKDIR /app

# Copia los archivos del proyecto
COPY . .

# Instala dependencias de producción
RUN composer install --no-dev --optimize-autoloader --no-interaction

# Imagen final con Apache + PHP 8.2
FROM php:8.2-apache

# Habilita extensiones necesarias
RUN apt-get update && apt-get install -y \
    libzip-dev unzip libpng-dev libonig-dev libxml2-dev zip \
    && docker-php-ext-install pdo pdo_mysql zip

# Copia archivos desde el paso anterior
COPY --from=build /app /var/www/html

# Establece permisos
RUN chown -R www-data:www-data /var/www/html/storage /var/www/html/bootstrap/cache

# Habilita Apache mod_rewrite
RUN a2enmod rewrite

# Establece el directorio raíz
ENV APACHE_DOCUMENT_ROOT /var/www/html/public

# Actualiza configuración de Apache
RUN sed -ri -e 's!/var/www/html!/var/www/html/public!g' /etc/apache2/sites-available/*.conf

EXPOSE 80
